<h1>New Game !</h1>

<% @sample.each do |letter| %>
<div class="letter">
  <%=letter%>
</div>
<% end %>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" value="<%= @sample.join %>" name="sample">
  <input type="text" name="guess" placeholder="What is your best proposal" class="my-form">
  <input type="submit" class="my_button" value="Play!">
</form>
